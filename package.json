{
  "name": "mytools-zack",
  "displayName": "ZTools",
  "description": "some tools personal used",
  "repository": "https://github.com/CodeByZack/mytools",
  "publisher": "codebyzack",
  "version": "0.0.2",
  "icon": "image/ks.jpg",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "mytools-zack.json2ts",
        "title": "json2ts"
      },
      {
        "command": "mytools-zack.translate",
        "title": "translate"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "codebyzack.tools",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "codebyzack.tools": [
        {
          "command": "mytools-zack.json2ts",
          "when": "editorHasSelection"
        },
        {
          "command": "mytools-zack.translate",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "codebyzack.tools",
        "label": "mytools"
      }
    ],
    "keybindings": [
      {
        "command": "mytools-zack.translate",
        "key": "ctrl+t",
        "mac": "cmd+t",
        "when": "editorHasSelection"
      },
      {
        "command": "mytools-zack.json2ts",
        "key": "ctrl+j",
        "mac": "cmd+j",
        "when": "editorHasSelection"
      }
    ],
    "snippets": [
      {
        "language": "typescriptreact",
        "path": "./snippets/typescriptreact.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/typescriptreact.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascriptreact.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/javascriptreact.json"
      }
    ],
    "configuration": {
      "title": "ZTools",
      "properties": {
        "mytools-zack.autoAddMetaToMarkdown": {
          "type": "boolean",
          "default": false,
          "description": "是否在保存 markdown 时，自动添加头信息"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "gen-snippets": "node snippets/index.js",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.27",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "dayjs": "^1.11.7",
    "front-matter": "^4.0.2",
    "gray-matter": "^4.0.3",
    "json2tstool": "^1.0.7"
  }
}
